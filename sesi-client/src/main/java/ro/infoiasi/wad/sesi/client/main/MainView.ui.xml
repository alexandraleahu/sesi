<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>
    <ui:with field="resource" type="ro.infoiasi.wad.sesi.resources.SesiResources"/>

    <g:HTMLPanel addStyleNames="{resource.style.withScroll}">
         <b:Heading size="3" addStyleNames="{resource.style.bigLabel}">
             Semantic Student Internships
         </b:Heading>
        <b:ControlGroup>
            <b:Button type="PRIMARY" ui:field="logoutBtn" text="Logout" visible="false" addStyleNames="{resource.style.floatRight}
                                                                            {resource.style.standardMarginRight}"/>
            <b:Button type="PRIMARY" ui:field="profileBtn" text="Profile" visible="false" addStyleNames="{resource.style.floatRight}
                                                                            {resource.style.standardMarginRight}"/>
        </b:ControlGroup>
        <b:TabPanel tabPosition="top" ui:field="tabPanel">
             <b:Tab heading="Home" active="true" ui:field="homeTab">
                 <g:Label text="Welcome to Semantic Student Internships!" />
                 <g:SimplePanel ui:field="homePanel" />
             </b:Tab>

            <b:Tab heading="Browse Internships" active="false" ui:field="internshipsTab">
                 <g:SimplePanel ui:field="internshipsPanel" />
             </b:Tab>
            <b:Tab heading="Browse Companies" active="false" ui:field="companiesTab">
                 <g:SimplePanel ui:field="companiesPanel" />
             </b:Tab>



        </b:TabPanel>
    </g:HTMLPanel>
</ui:UiBinder>
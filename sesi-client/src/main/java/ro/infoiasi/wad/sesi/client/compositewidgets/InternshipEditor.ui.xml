<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:c='urn:import:ro.infoiasi.wad.sesi.client.compositewidgets'
             xmlns:bdate="urn:import:com.github.gwtbootstrap.datetimepicker.client.ui">

    <ui:with field="resource" type="ro.infoiasi.wad.sesi.resources.SesiResources" />
    <g:HTMLPanel>

        <b:Hero>
            <g:Label  text="Define new internship" styleName="{resource.style.bigLabel}" addStyleNames="{resource.style.bigLabel})"/>
        </b:Hero>

        <b:WellForm>
            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Name"  />
                </b:Column>

                <b:Column size="2">
                    <b:TextBox ui:field="internshipNameLabel"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Start date"/>
                </b:Column>

                <b:Column size="2">
                    <bdate:DateTimeBox format="dd/mm/yyyy hh:ii" autoClose="true" ui:field="startDateBox"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="End date"/>
                </b:Column>

                <b:Column size="2">
                    <bdate:DateTimeBox format="dd/mm/yyyy hh:ii" autoClose="true" ui:field="endDateBox"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Category"/>
                </b:Column>

                <b:Column size="2">
                    <b:ValueListBox ui:field="categoryList"/>
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Description"/>
                </b:Column>

                <b:Column size="2">
                    <b:TextArea  ui:field="descriptionArea" placeholder="Description of the internship" size="3"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Preferred general skills"/>
                </b:Column>

                <b:Column size="4" >
                    <b:TextArea ui:field="preferredGeneralSkillsField" size="4" placeholder="E.g. team player, ambitious,.." />
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Preferred technical skills"/>
                </b:Column>

                <b:Column size="3">
                    <b:TextBox ui:field="preferredFreebaseTechnicalSkillsBox" b:id="freebasePreferredTechnicalSkills" size="3"/>
                </b:Column>

                <b:Column size="4" >
                    <b:TextArea ui:field="preferredTechnicalSkillIdLabel" b:id="preferredTechnicalSkillId" size="4" placeholder="Selected technologies will go here" />
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Acquired general skills"/>
                </b:Column>

                <b:Column size="4" >
                    <b:TextArea ui:field="acquiredGeneralSkillsField" size="4" placeholder="E.g. working in large teams, daily scrums,.." />
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Acquired technical skills"/>
                </b:Column>

                <b:Column size="3">
                    <b:TextBox ui:field="acquiredTechnicalSkillsBox" b:id="freebaseAcquiredTechnicalSkills" size="3"/>
                </b:Column>

                <b:Column size="4" >
                    <b:TextArea ui:field="acquiredTechnicalSkillIdLabel" b:id="acquiredTechnicalSkillId" size="4" placeholder="Selected technologies will go here" />
                </b:Column>
            </b:Row>

        </b:WellForm>
    </g:HTMLPanel>
</ui:UiBinder>
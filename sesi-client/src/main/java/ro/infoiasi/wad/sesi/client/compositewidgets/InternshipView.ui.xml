<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:c='urn:import:ro.infoiasi.wad.sesi.client.compositewidgets'>

    <ui:with field="resource" type="ro.infoiasi.wad.sesi.resources.SesiResources"/>
    <g:HTMLPanel styleName="{resource.style.withScroll}">

        <b:Hero>
            <g:Label ui:field="internshipTitleHeader" styleName="{resource.style.bigLabel}"/>
        </b:Hero>

        <b:WellForm>
            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Published by"/>
                </b:Column>
                <b:Column size="1">
                    <b:Label type="INFO" text="Openings"/>
                </b:Column>
                <b:Column size="1">
                    <b:Label type="INFO" text="Applications"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <g:Hyperlink ui:field="companyLink"/>
                </b:Column>
                <b:Column size="1">
                    <c:IntegerView ui:field="openingsLabel"/>
                </b:Column>
                <b:Column size="1">
                    <c:IntegerView ui:field="applicationsLabel"/>
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="3">
                    <b:Label type="INFO" text="Start date"/>
                </b:Column>


            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <g:Label ui:field="startDateLabel"/>
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="3">
                    <b:Label type="INFO" text="End date"/>
                </b:Column>


            </b:Row>
            <b:Row>
                <b:Column size="3">
                    <g:Label ui:field="endDateLabel"/>
                </b:Column>


            </b:Row>

            <b:Row>
                <b:Column size="1">
                    <b:Label type="INFO" text="Category"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <g:Label ui:field="categoryLabel"/>
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="1">
                    <b:Label type="INFO" text="Description"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="4">
                    <g:Label ui:field="descriptionLabel"/>
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Preferred general skills"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="4">
                    <g:Label ui:field="preferredGeneralSkillsLabel"/>
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Acquired general skills"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="4">
                    <g:Label ui:field="acquiredGeneralSkillsLabel"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Preferred technical skills"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="4">
                    <c:TechnicalSkillView ui:field="preferredTechnicalSkillsTable"/>
                </b:Column>
            </b:Row>

            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Acquired technical skills"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="4">
                    <c:TechnicalSkillView ui:field="acquiredTechnicalSkillsTable"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="1">
                    <b:Label type="INFO" text="Salary"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="3">
                    <c:DoubleView ui:field="salaryValueLabel"/>
                    <c:OntologyExtraInfoView ui:field="salaryCurrencyLabel"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="1">
                    <b:Label type="INFO" text="City"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="1">
                    <c:OntologyExtraInfoView ui:field="cityLink"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="2">
                    <b:Label type="INFO" text="Offers relocation"/>
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="1">
                    <g:Label ui:field="relocationLabel"/>
                </b:Column>
            </b:Row>
        </b:WellForm>
    </g:HTMLPanel>
</ui:UiBinder>
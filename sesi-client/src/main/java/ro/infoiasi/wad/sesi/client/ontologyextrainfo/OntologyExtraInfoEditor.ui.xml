<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>
    <ui:with field="resource" type="ro.infoiasi.wad.sesi.resources.SesiResources"/>
    <g:HTMLPanel>
            <b:WellForm type="INLINE">
                <b:ControlGroup ui:field="nameControlGroup">
                    <b:ControlLabel for="name">
                        Name:
                    </b:ControlLabel>
                    <b:Controls>
                        <b:TextBox b:id="name"
                                   ui:field="nameBox" placeholder="Name of the resource" />
                        <b:HelpInline ui:field="nameHelpInline" />
                    </b:Controls>
                </b:ControlGroup>
                <b:ControlGroup ui:field="urlControlGroup">
                    <b:ControlLabel for="url">
                        URL:
                    </b:ControlLabel>
                    <b:Controls>
                        <b:TextBox b:id="url"
                                   ui:field="urlBox" placeholder="An URL to find out more information" />
                        <b:HelpInline ui:field="urlHelpInline" />
                    </b:Controls>
                </b:ControlGroup>
                <b:ControlGroup>
                    <b:Controls>
                        <b:Button type="DANGER" ui:field="removeBtn" text="Remove" visible="false"/>
                    </b:Controls>
                </b:ControlGroup>
            </b:WellForm>
    </g:HTMLPanel>
</ui:UiBinder>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:c='urn:import:ro.infoiasi.wad.sesi.client.commonwidgets'>
    <g:HTMLPanel>
        <b:ControlGroup>
            <b:ControlLabel for="mainResourceBox">Main resource:</b:ControlLabel>
            <b:Controls>
                <b:ValueListBox ui:field="mainResourceBox" b:id="mainResourceBox"/>
            </b:Controls>
        </b:ControlGroup>
        <b:Icon type="ROTATE_RIGHT" size="THREE_TIMES" spin="true" ui:field="loadingIcon" visible="false"/>
        <b:WellForm type="HORIZONTAL" visible="false" ui:field="mainForm">
            <b:Fieldset>
                <b:ControlGroup>
                    <b:ControlLabel ui:field="relatedLabel"/>
                    <c:NamesListEditor ui:field="specificNamesList"/>
                </b:ControlGroup>
            </b:Fieldset>
        </b:WellForm>
    </g:HTMLPanel>
</ui:UiBinder>